{% extends 'base.html.twig' %}

{% block title %}Owner{% endblock %}

{% block body %}
    <h1>Owner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ owner.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ owner.firstname }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ owner.birthday ? owner.birthday|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ owner.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ owner.email }}</td>
            </tr>
            <tr>
                {% for a in owner.accounts %}
                    <tr>
                        <th>Account</th>
                        <td>{{a.iban}}</td>
                    </tr>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('owner_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('owner_edit', {'id': owner.id}) }}">edit</a>

    <a class="btn btn-primary" href="{{ path('transaction_new_owner', {'id': owner.id}) }}">create new transaction</a>

    {{ include('owner/_delete_form.html.twig') }}
{% endblock %}
